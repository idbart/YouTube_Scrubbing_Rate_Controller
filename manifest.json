{
	"manifest_version": 2,

	"name": "YouTube Scrubbing Rate Controller",
	"version": "1.0",
	"description": "A Chrome browser extension for controlling the arrow-key scrubbing rate on YouTube. To activate: hold the Ctrl key while pressing the right or left arrow keys",

	"permissions": ["activeTab", "declarativeContent", "storage"],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["*://www.youtube.com/*"]
		}
	],

	"page_action": {
		"default_popup": "popup.html",
		
		"default_icon": {
			"16": "images/icon16.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"128": "images/icon128.png"
	}
}